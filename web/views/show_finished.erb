<div class="row">
  <div class="small-12 columns">
    <h1>Job <%= @job.job_id %></h1>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <tbody>
        <tr>
          <th>Job</th>
          <td><%= @job.job_class %></td>
        </tr>
        <tr>
          <th>Queue</th>
          <td><%= @job.queue %></td>
        </tr>
        <tr>
          <th>Priority</th>
          <td><%= @job.priority %></td>
        </tr>
        <tr>
          <th>Run At</th>
          <td>
            <%== relative_time @job.run_at %>
          </td>
        </tr>
        <tr>
          <th>Failures</th>
          <td><pre><%= @job.error_count %></pre></td>
        </tr>
        <tr>
          <th>Args</th>
          <td><pre><%= @job.args.map(&:inspect).join(', ') %></pre></td>
        </tr>
        <tr>
          <th>Last Error</th>
          <td><pre><%= @job.last_error %></pre></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <form class="form-inline" action="<%= link_to "/history/#{@job.job_id}" %>" method="post">
      <input type="hidden" name="_method" value="put" />
      <button><i class="fa fa-play-circle"></i> Run Again</button>
    </form>
  </div>
</div>