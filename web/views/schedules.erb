<div class="row">
  <div class="small-12 medium-8 columns">
    <h1><%= @list.total %> Scheduled Job<%= @list.total == 1 ? "" : "s" %></h1>
  </div>
  <div class="small-12 medium-4 columns">
    <%== erb :_search %>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Job</th>
          <th>Args</th>
          <th>Schedule</th>
          <th>Enabled</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @list.page_jobs.each do |schedule| %>
          <tr>
            <td>
              <a href="<%= link_to "schedules/#{schedule.name}" %>">
                <%= schedule.name %>
              </a>
              <% unless schedule.description.nil? %>
                <div style="font-size: 80%"><%= schedule.description %></div>
              <% end %>
            </td>
            <td><%= schedule.job_class %></td>
            <td><%= schedule.args %></td>
            <td><%= schedule.expression %></td>
            <td><%= schedule.enabled %></td>
            <td>
              <form class="form-inline" action="<%= link_to "/schedules/#{schedule.name}" %>" method="post">
                <input type="hidden" name="_method" value="post" />
                <button class="plain"><i class="fa fa-play"></i></button>
              </form>
              <% if schedule.enabled %>
                <form class="form-inline" action="<%= link_to "/schedules/#{schedule.name}" %>" method="post">
                  <input type="hidden" name="_method" value="put" />
                  <input type="hidden" name="enabled" value="false" />
                  <button class="plain"><i class="fa fa-circle"></i></button>
                </form>
              <% else %>
                <form class="form-inline" action="<%= link_to "/schedules/#{schedule.name}" %>" method="post">
                  <input type="hidden" name="_method" value="put" />
                  <input type="hidden" name="enabled" value="true" />
                  <button class="plain"><i class="fa fa-circle-thin"></i></button>
                </form>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <%== erb :_pager %>
  </div>
</div>
